@using StayCShop.Web.Startup
@using StayCShop.Brands.Dto;

@{
    ViewBag.CurrentPageName = PageNames.Brands;
}
@section scripts
{
    <environment names="Development">
        @*<script abp-src="/view-resources/Views/Brands/Index.js" asp-append-version="true"></script>*@
        <script src="~/view-resources/Views/Brands/Index.js" asp-append-version="true"></script>
    </environment>

}


<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Brands")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#CreateOrEditModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="card card-custom gutter-b">
        <div class="card-body">
            <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <!--Use for bulk actions-->
                        </div>
                        <div class="col-md-6">
                            @await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")
                        </div>
                    </div>
                </div>
            </div>
            <div class="align-items-center">
                <table id="DataTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Actions")</th>
                            <th>@L("Title")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</section>
@await Html.PartialAsync("~/Views/Brands/_CreateOrEditBrandModal.cshtml")


