@using StayCShop.Images.Dto;
@using StayCShop.Web.Models.Common.Modals;


@model GetForEditImageDto

@{
    Layout = null;
    string imgSrc;
    var base64 = Convert.ToBase64String(Model.image);
    imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}


<div class="content d-flex flex-column flex-column-fluid" style="margin-top:20px" id="kt_content">
    <form name="InformationForm" role="form" class="form-horizontal">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" id="ProductId" name="ProductId" value="@ViewBag.ProductId" />
        <div class="modal-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="col-sm-3 text-center margin-top-15 margin-bottom-15">
                        <img id="imageViewrEdit" src="@imgSrc" class="border rounded" style="width: 150px; height: 150px; margin-bottom: 30px; background-color: silver; background-size: cover">
                    </div>
                    <div class="custom-file col-md-8 mb-2">
                        <input id="ImageInputEdit" type="file" class="custom-file-input form-control-sm" name="coverimage" value="Upload file" />
                        <label class="custom-file-label col-form-label-sm" for="ImageInputEdit">Choose file</label>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group row required ">
                        <label class="col-md-3 col-form-label">@L("Title")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("Description")</label>
                        <div class="col-md-9">
                            <input type="text" class="form-control" name="Description" value="@Model.Description">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
    </form>
</div>

<script src="~/view-resources/Views/Products/_EditImageModal.js" asp-append-version="true"></script>
