@using StayCShop.Web.Models.Common.Modals;
@{

    Layout = null;
}

<div class="modal fade" id="CreateOrEditModal" tabindex="-1" role="dialog" aria-labelledby="CreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNew")))
            <form name="InformationForm" role="form" class="form-horizontal">
                <input type="hidden" id="ProductId" name="ProductId" value="@ViewBag.ProductId" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="col-sm-3 text-center margin-top-15 margin-bottom-15">
                                <img id="imageViewr" class="border rounded" style="width: 150px; height: 150px; margin-bottom: 30px; background-color: silver; background-size: cover">
                            </div>
                            <div class="custom-file col-md-8 mb-2">
                                <input id="ImageInput" type="file" class="custom-file-input form-control-sm" name="coverimage" value="Upload file" />
                                <label class="custom-file-label col-form-label-sm" for="ImageInput">Choose file</label>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group row required ">
                                <label class="col-md-3 col-form-label">@L("Title")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Title">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 col-form-label">@L("Description")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="Description">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
