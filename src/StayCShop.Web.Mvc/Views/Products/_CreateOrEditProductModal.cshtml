@using StayCShop.Products.Dto;
@using StayCShop.Web.Models.Common.Modals;


@model GetForEditProductDto
@{
    string imgSrc;
}



@{
    Layout = null;
}
@if (!Model.Id.HasValue)
{<div class="modal fade" id="CreateOrEditModal" tabindex="-1" role="dialog" aria-labelledby="CreateModalLabel" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNew")))
                <form name="InformationForm" role="form" class="form-horizontal">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-3 text-center margin-top-15 margin-bottom-15">

                                <img id="imageViewr" class="border rounded" style="width:100px;height:100px;margin-bottom:30px;background-color:silver;">
                            </div>

                            <input id="textFile" type="file" name="coverimage" value="Upload file" />
                        </div>

                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("ProductName")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Color")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Color" value="@Model.Color">
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Price")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Price" value="@Model.Price">
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Material")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Material" value="@Model.Material">
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Size")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Size" value="@Model.Size">
                            </div>
                        </div>
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Quantity")</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="Quantity" value="@Model.Quantity">
                            </div>
                        </div>
                    </div>
                    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
                </form>
            </div>
        </div>
    </div>
}
else
{
    {
        var base64 = Convert.ToBase64String(Model.CoverImage);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Edit")))
    <form name="InformationForm" role="form" class="form-horizontal">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="modal-body">
            <div class="row mt-5">
                <div class="col-sm-3 text-center margin-top-15 margin-bottom-15">

                    <img id="imageViewr" src="@imgSrc" class="border rounded" style="width:100px;height:100px;margin-bottom:30px;background-color:silver;">
                </div>

                <input id="textFile" type="file" name="coverimage" value="Upload file" />
            </div>

            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("ProductName")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("Color")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Color" value="@Model.Color">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("Price")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Price" value="@Model.Price">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("Material")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Material" value="@Model.Material">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("Size")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Size" value="@Model.Size">
                </div>
            </div>
            <div class="form-group row required">
                <label class="col-md-3 col-form-label">@L("Quantity")</label>
                <div class="col-md-9">
                    <input type="text" class="form-control" name="Quantity" value="@Model.Quantity">
                </div>
            </div>
        </div>
        @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
    </form>

    <script src="~/view-resources/Views/Products/_EditProductModal.js" asp-append-version="true"></script>

}